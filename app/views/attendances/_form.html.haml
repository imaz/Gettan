= form_for @attendance do |f|
  -if @attendance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attendance.errors.count, "error")} prohibited this attendance from being saved:"
      %ul
        - @attendance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :calendar
    = f.select :calendar_id,options_from_collection_for_select(@calendars,'id','school_day')
  .field
    = f.label :period
    = f.number_field :period
  .field
    = f.label :subject
    = f.select :subject_id,options_from_collection_for_select(@subjects,'id','name')
  .actions
    = f.submit 'Save'
