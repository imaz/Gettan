= form_for(@subject) do |f|
  - if @subject.errors.any?
    #error_explanation
      %h2
        = pluralize(@subject.errors.count, "error")
        prohibited this subject from being saved:
      %ul
        - @subject.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :credits
    %br/
    = f.number_field :credits
  .field
    = f.label :attendance
    %br/
    = f.number_field :attendance
  .actions
    = f.submit
